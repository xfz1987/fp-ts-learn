{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "moduleResolution": "nodenext",
    "types": ["reflect-metadata"],
    "noImplicitAny": true,
    "strict": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true
  }
}
